                @*Numero de Teléfono*@
                <div class="form-group">
                    <label>Numero de Teléfono:</label>
                    <InputText @bind-Value="cliente.NumeroTelefono" class="form-control" />
                </div>

                @*nombre de Usuario*@
                <div class="form-group">
                    <label>Nombre de Usuario</label>
                    <InputText @bind-Value="cliente.NombreUsuario" class="form-control" />
                </div>

                @*Correo*@
                <div class="form-group">
                    <label>Correo:</label>
                    <InputNumber @bind-Value="cliente.Correo" class="form-control" />
                </div>

                @*Clave*@
                <div class="form-group">
                    <label>Contraseña:</label>
                    <InputNumber @bind-Value="cliente.Clave" class="form-control" />
                </div>
            </form>
        </div>
        <div class="card-footer">
            <div class="form-group text-center" display: inline-block>
                <button type="button" class="btn btn-lg btn-primary oi oi-file" @onclick="Nuevo"> Nuevo</button>
                <button type="submit" class="btn btn-lg btn-success oi oi-cloud-upload" @onclick="Registrarse"> Guardar</button>
                <button type="button" class="btn btn-lg btn-danger oi oi-trash" @onclick="Cancelar"> Eliminar</button>
            </div>
        </div>
    </div>
</EditForm>

