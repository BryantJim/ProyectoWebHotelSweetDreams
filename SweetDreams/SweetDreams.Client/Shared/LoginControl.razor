@page "/loginControl"
@using System.Web;

@inject HttpClient Http
@*


    <AuthorizeView>
        <Authorized>
            <b>User: @context.User.Identity.Name</b>

            <a class="ml-md-auto btn btn-success"
               href="/logout?returnUrl=/"
               target="_top">Logout<span class="oi oi-account-logout"></span></a>
        </Authorized>
        <NotAuthorized>
            <div>
                <h2>Studio EF</h2>
            </div>
        </NotAuthorized>
    </AuthorizeView>

    @code {

        private string encode(string param)
        {
            return HttpUtility.UrlEncode(param);
        }

    }

*@